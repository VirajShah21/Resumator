{
    "compilerOptions": {
        "baseUrl": "./",
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "module": "commonjs",
        "outDir": "dist",
        "removeComments": true,
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "strictNullChecks": true,
        "target": "es6",
        "moduleResolution": "node",
        "paths": {
            "@entities/*": ["src/entities/daos/*", "src/entities/models/*"],
            "@transformers/*": ["src/transformers/*"],
            "@shared/*": ["src/shared/*"],
            "@server": ["src/Server"]
        },
        "types": ["node"],
        "typeRoots": ["node_modules/@types"]
    },
    "include": ["src/**/*.ts", "spec/**/*.ts"],
    "exclude": ["src/public/"],
    
}
