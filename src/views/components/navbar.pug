nav.navbar.navbar-expand-lg.navbar-light.sticky-top
    .container-fluid
        a.navbar-brand.text-primary.mr-lg-4(href='/' style='font-weight: lighter;')
            img.img-fluid.d-inline-block.align-top(
                src='/images/resumator-logo.png'
                height='30'
                width='30'
                alt='Resumator Logo'
                loading='lazy')
            | &nbsp; Resumator
            sup
                sup.ml-1.bg-primary.text-light.badge Beta
        button.navbar-toggler(type='button' data-toggle='collapse' data-target='#collapsing-navbar')
            span.navbar-toggler-icon
        #collapsing-navbar.collapse.navbar-collapse.ml-lg-4
            ul.navbar-nav.mr-auto.mb-2.mb-lg-0
                li.nav-item
                    a.nav-link(href='/' class=`${nav == "Home" ? "active" : ""}`)
                        .btn
                            ion-icon(name='home-outline')
                        | Home
                if account
                    li.nav-item
                        a.nav-link(href='/app/dashboard' class=`${nav == "Dashboard" ? "active" : ""}`)
                            .btn
                                ion-icon(name='build-outline')
                            | Dashboard
                li.nav-item
                    a.nav-link(href='/app/themes' class=`${nav == "Themes" ? "active" : ""}`)
                        .btn
                            ion-icon(name='color-palette-outline')
                        | Themes
                li.nav-item
                    a.nav-link(href='/app/help' class=`${nav == "Help" ? "active" : ""}`)
                        .btn
                            ion-icon(name='help-buoy')
                        | Help
                if account
                    li.nav-item
                        a.nav-link(href='/app/account' class=`${nav == "Account" ? "active" : ""}`)
                            .btn
                                ion-icon(name='person-circle-outline')
                            | Account

